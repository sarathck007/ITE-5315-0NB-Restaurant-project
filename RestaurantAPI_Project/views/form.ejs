<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Restaurants - Search</title>
    <link rel="stylesheet" href="/searchStyles.css">
</head>
<body>
    <!-- Main Content -->
    <div class="container">
        <h2>Search Restaurants</h2>
        <form action="/search" method="POST" class="search-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="page">Page:</label>
                    <input type="number" id="page" name="page" required>
                </div>
                <div class="form-group">
                    <label for="perPage">Per Page:</label>
                    <input type="number" id="perPage" name="perPage" required>
                </div>
                <div class="form-group">
                    <label for="borough">Borough (optional):</label>
                    <input type="text" id="borough" name="borough">
                </div>
            </div>
            <button type="submit">Search</button>
        </form>

        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <% if (restaurants) { %>
            <!-- Search results for user search -->
            <h2>Search Results</h2>
            <div class="results">
                <% restaurants.forEach(restaurant => { %>
                    <div class="restaurant-card">
                        <h3><%= restaurant.name %></h3>
                        <p><strong>Borough:</strong> <%= restaurant.borough %></p>
                        <p><strong>Cuisine:</strong> <%= restaurant.cuisine %></p>
                        <p><strong>Address:</strong> <%= restaurant.address.building %> <%= restaurant.address.street %>, <%= restaurant.address.zipcode %></p>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
